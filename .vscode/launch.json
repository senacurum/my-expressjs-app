{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch with nodemon",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
        "args": ["${workspaceRoot}/index.ts"],
        "runtimeArgs": ["--nolazy"]
      }
    ]
  }



